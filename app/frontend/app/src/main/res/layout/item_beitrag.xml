<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/feed_border"
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_marginBottom="12dp">

        <!-- Bild/Video + Overlay -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <!-- VideoView (anfangs GONE) -->
            <VideoView
                android:id="@+id/feedVideo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />

            <!-- Default-Bild (wird ausgeblendet, wenn Video da) -->
            <ImageView
                android:id="@+id/feedImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/login_background_pic" />

            <!-- Beschreibung als Overlay -->
            <TextView
                android:id="@+id/tvBeschreibung"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="#88000000"
                android:ellipsize="end"
                android:maxLines="2"
                android:padding="8dp"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />
        </FrameLayout>

        <!-- Bewertungsbuttons -->
        <LinearLayout
            android:id="@+id/ll_action_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btn_accepted"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@drawable/blue_frame"
                android:text="Accepted"
                android:textColor="@color/button_green" />

            <Button
                android:id="@+id/btn_rejected"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:background="@drawable/red_frame"
                android:text="Rejected"
                android:textColor="@color/button_red" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

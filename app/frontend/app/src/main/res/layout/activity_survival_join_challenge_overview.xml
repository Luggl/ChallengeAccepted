<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".DashboardActivity">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:background="@drawable/grey_background"
        android:padding="8dp">

        <!-- Gruppenname -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kämpfernatur\nSurvival Challenge"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold"
            android:paddingStart="8dp" />
    </LinearLayout>

    <!-- Zurück-Button -->
    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="28dp"
        android:src="@drawable/back_icon"
        android:background="@drawable/grey_background"
        android:tint="@android:color/white"
        tools:ignore="UseAppTint"/>

    <!-- Hauptinhalt -->
    <LinearLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/btn_back"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:background="@color/black">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <!-- Titel -->
                <TextView
                    android:id="@+id/titleKalender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trainingszeitraum wählen:"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"/>

                <!-- Kalender -->
                <GridLayout
                    android:id="@+id/kalenderGrid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:columnCount="7"
                    android:rowCount="5"
                    android:padding="8dp"
                    android:background="@drawable/green_frame">

                    <!-- Beispiel für ein markiertes Datum -->
                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="8"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:background="@drawable/round_background"
                        android:layout_margin="4dp" />

                    <!-- Weitere Tage kannst du dynamisch hinzufügen -->
                </GridLayout>

                <!-- Abstand -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="24dp" />

                <!-- Tabelle Sportaktivitäten -->
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:stretchColumns="0,1"
                    android:background="@color/grey_100"
                    android:padding="8dp">

                    <!-- Kopfzeile -->
                    <TableRow>
                        <TextView android:text="Aktivitäten"
                            android:textStyle="bold"
                            android:textColor="@color/white"/>
                        <TextView android:text="Intensität"
                            android:textStyle="bold"
                            android:textColor="@color/white"/>
                    </TableRow>
                    <TextView android:text=""/>
                    <TableRow>

                    </TableRow>
                    <!-- Push-Ups -->
                    <TableRow>
                        <TextView android:text="Push-Ups" android:textColor="@color/primary"/>
                        <TextView android:text="Medium" android:textColor="@color/primary"/>
                    </TableRow>

                    <!-- Planks -->
                    <TableRow>
                        <TextView android:text="Planks" android:textColor="@color/primary"/>
                        <TextView android:text="Easy" android:textColor="@color/primary"/>
                    </TableRow>

                    <!-- Weitere Aktivitäten -->
                    <TableRow>
                        <TextView android:text="Sit-Ups" android:textColor="@color/white"/>
                        <TextView android:text="0" android:textColor="@color/white"/>
                    </TableRow>

                    <TableRow>
                        <TextView android:text="Burpees" android:textColor="@color/white"/>
                        <TextView android:text="0" android:textColor="@color/white"/>
                    </TableRow>

                    <TableRow>
                        <TextView android:text="Squats" android:textColor="@color/white"/>
                        <TextView android:text="0" android:textColor="@color/white"/>
                    </TableRow>

                    <TableRow>
                        <TextView android:text="Lunges" android:textColor="@color/white"/>
                        <TextView android:text="0" android:textColor="@color/white"/>
                    </TableRow>
                </TableLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <Button
        android:id="@+id/button_finish"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:text="Challenge beitreten"
        android:textColor="@color/white"
        android:background="@drawable/green_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="600dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textStyle="bold"
        android:textSize="16sp"
        android:padding="12dp" />

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/ll_bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="670dp"
        android:background="@color/grey_300"
        android:orientation="horizontal"
        android:weightSum="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Community Icon -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/group_white_icon"/>

        </LinearLayout>

        <!-- Home Icon -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/home_blue_icon"/>

        </LinearLayout>

        <!-- Add Icon -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/add_white_icon" />

        </LinearLayout>

        <!-- Profile Icon -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/profile_white_icon"/>

        </LinearLayout>

    </LinearLayout>
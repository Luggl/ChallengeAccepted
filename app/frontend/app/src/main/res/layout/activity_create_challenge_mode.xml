<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".CreateChallengeModeActivity">

    <!-- Scrollbarer Hauptinhalt -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/root_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:clipToPadding="false"
        android:paddingBottom="100dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Kopfbereich mit Zurück-Button und Gruppenname -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/grey_background"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:padding="8dp">

                <!-- Zurück-Button -->
                <ImageButton
                    android:id="@+id/btn_back"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="start"
                    android:background="@drawable/grey_background"
                    android:contentDescription="@string/back_button_desc"
                    android:src="@drawable/back_icon"
                    android:tint="@android:color/white"
                    tools:ignore="UseAppTint" />

                <!-- Gruppenname (zentriert) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/grey_background"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="The Hustlers"
                        android:textColor="@color/white"
                        android:textSize="25sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <!-- Bereich für Modusauswahl -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="16dp"
                android:background="@drawable/grey_background"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <!-- Modusauswahl (Standard / Survival) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/grey_background"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Standard-Modus -->
                    <FrameLayout
                        android:id="@+id/fl_standard"
                        android:layout_width="match_parent"
                        android:layout_height="215dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/blue_frame">

                        <!-- Bild für Standard-Modus -->
                        <ImageView
                            android:id="@+id/iv_standard"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/grey_background"
                            android:clipToOutline="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/standard_mode_pic" />

                        <!-- Beschriftung für Standard-Modus -->
                        <TextView
                            android:id="@+id/tv_standard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/bright_grey_frame"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="6dp"
                            android:text="Standard"
                            android:textColor="@color/white"
                            android:textSize="24sp"
                            android:textStyle="bold" />
                    </FrameLayout>

                    <!-- Survival-Modus -->
                    <FrameLayout
                        android:id="@+id/fl_survival"
                        android:layout_width="match_parent"
                        android:layout_height="215dp">

                        <!-- Bild für Survival-Modus -->
                        <ImageView
                            android:id="@+id/iv_survival"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/grey_background"
                            android:clipToOutline="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/survival_mode_pic" />

                        <!-- Beschriftung für Survival-Modus -->
                        <TextView
                            android:id="@+id/tv_survival"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/bright_grey_frame"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="6dp"
                            android:text="Survival"
                            android:textColor="@color/white"
                            android:textSize="24sp"
                            android:textStyle="bold" />
                    </FrameLayout>
                </LinearLayout>

                <!-- Button zur Bestätigung der Modusauswahl -->
                <ImageButton
                    android:id="@+id/btn_confirm_selection"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_gravity="end"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/green_button"
                    android:contentDescription="@string/desc_check_confirm"
                    android:src="@drawable/check_icon" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Feste untere Navigationsleiste -->
    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:background="@color/grey_300"
        android:orientation="horizontal"
        android:weightSum="4">

        <!-- Community / Gruppen -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/nav_group"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/group_white_icon" />
        </LinearLayout>

        <!-- Home -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/nav_home"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/home_white_icon" />
        </LinearLayout>

        <!-- Add (blau hervorgehoben) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/nav_add"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/add_blue_icon" />
        </LinearLayout>

        <!-- Profil -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/nav_profile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/profile_white_icon" />
        </LinearLayout>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>

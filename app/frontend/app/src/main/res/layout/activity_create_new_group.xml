<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E1E1E"
    tools:context=".DashboardActivity">

    <!-- Greeting Section with Profile Background -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_greeting"
        android:layout_width="400dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/iv_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/group_overview_pic" />

        <TextView
            android:id="@+id/tv_greeting"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-medium"
            android:background="@drawable/grey_background"
            android:text="Neue Gruppe erstellen"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:id="@+id/green_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:background="@drawable/green_frame"
        android:padding="16dp"
        android:layout_margin="16dp">


    <!-- Gruppenbild + Name -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/grey_background"
            android:padding="8dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/iv_group_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/camera_icon"
                android:background="@drawable/round_background"
                android:padding="10dp"
                android:layout_marginEnd="8dp"
                android:scaleType="centerInside"
                android:clipToOutline="true" />

            <TextView
                android:id="@+id/tv_group_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gruppenname"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Beschreibung -->
        <EditText
            android:id="@+id/et_group_description"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:hint="Beschreibung:\nHallo..."
            android:gravity="top|start"
            android:background="@drawable/grey_background"
            android:textColor="@color/white"
            android:textColorHint="#cccccc"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:inputType="textMultiLine" />

        <!-- Button -->
        <Button
            android:id="@+id/btn_invite_friends"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lade Freunde ein!"
            android:textColor="@color/white"
            android:background="@drawable/green_frame"
            android:textStyle="bold"
            android:textSize="16sp"
            android:padding="12dp" />

    </LinearLayout>

    <Button
        android:id="@+id/button_finish"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:text="Lade Freunde ein!"
        android:textColor="@color/white"
        android:background="@drawable/green_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="600dp"
        android:textStyle="bold"
        android:textSize="16sp"
        android:padding="12dp" />

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/ll_bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="670dp"
        android:background="#2A2A2A"
        android:orientation="horizontal"
        android:weightSum="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Community Icon -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/group_blue_icon"/>

        </LinearLayout>

        <!-- Home Icon -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/home_white_icon"/>

        </LinearLayout>

        <!-- Add Icon -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/add_white_icon" />

        </LinearLayout>

        <!-- Profile Icon -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/profile_white_icon"/>

        </LinearLayout>
    </LinearLayout>
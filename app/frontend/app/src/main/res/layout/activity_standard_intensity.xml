<?xml version="1.0" encoding="utf-8"?>
<!-- Hauptcontainer: CoordinatorLayout für flexible Layoutanpassung mit Insets -->
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".StandardIntensityActivity">

    <!-- Scrollbarer Bereich für den Hauptinhalt -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/root_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:clipToPadding="false"
        android:paddingBottom="100dp">

        <!-- Hauptinhalt in vertikaler Anordnung -->
        <LinearLayout
            android:id="@+id/main_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <!-- Header mit Zurück-Button und Challenge-Titel -->
            <LinearLayout
                android:id="@+id/header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:paddingBottom="16dp">

                <!-- Zurück-Button -->
                <ImageButton
                    android:id="@+id/btn_back"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="28dp"
                    android:background="@drawable/grey_background"
                    android:contentDescription="@string/back_button_desc"
                    android:src="@drawable/back_icon"
                    android:tint="@android:color/white"
                    tools:ignore="UseAppTint" />

                <!-- Challenge-Titel -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/grey_background"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="8dp"
                        android:text="Kämpfernatur\nStandard Challenge"
                        android:textColor="@color/white"
                        android:textSize="25sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <!-- Name der aktuellen Übung -->
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Übungstitel"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!-- Icon zur Übung -->
            <ImageView
                android:id="@+id/iv_exercise_icon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/blue_frame"
                android:padding="12dp"
                android:scaleType="centerInside"
                android:src="@drawable/pushups_icon"
                android:tint="@android:color/holo_blue_bright"
                tools:ignore="UseAppTint" />

            <!-- Auswahlbereich für Startintensität -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@drawable/bright_grey_frame"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Startintensität"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <!-- Anzeige Startwert -->
                <TextView
                    android:id="@+id/tv_start_main"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/blue_frame"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <!-- Seekbar für Startwert -->
                <SeekBar
                    android:id="@+id/seekbar_start"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:max="50"
                    android:progress="0" />
            </LinearLayout>

            <!-- Auswahlbereich für Endintensität -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@drawable/bright_grey_frame"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Endintensität"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <!-- Anzeige Endwert -->
                <TextView
                    android:id="@+id/tv_end_main"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/blue_frame"
                    android:gravity="center"
                    android:text="50"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <!-- Seekbar für Endwert -->
                <SeekBar
                    android:id="@+id/seekbar_end"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:progress="0" />
            </LinearLayout>

            <!-- Bestätigungs-Button -->
            <ImageButton
                android:id="@+id/btn_confirm_selection"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_gravity="bottom|end"
                android:layout_margin="16dp"
                android:background="@drawable/green_button"
                android:contentDescription="@string/desc_check_confirm"
                android:src="@drawable/check_icon" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Feste untere Navigationsleiste -->
    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/grey_300"
        android:orientation="horizontal"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:weightSum="4">

        <!-- Gruppenübersicht -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/nav_group"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/group_white_icon" />
        </LinearLayout>

        <!-- Startseite -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/nav_home"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/home_blue_icon" />
        </LinearLayout>

        <!-- Challenge hinzufügen -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/nav_add"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/add_white_icon" />
        </LinearLayout>

        <!-- Profil -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/nav_profile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/profile_white_icon" />
        </LinearLayout>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>

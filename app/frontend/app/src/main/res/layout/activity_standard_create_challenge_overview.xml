<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".DashboardActivity">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:background="@drawable/grey_background"
        android:padding="8dp">

        <!-- Gruppenname -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KÃ¤mpfernatur\nStandard Challenge"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold"
            android:paddingStart="8dp" />
    </LinearLayout>

    <!-- ðŸ”™ ZurÃ¼ck-Button oben links -->
    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="28dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/back_icon"
        android:tint="@android:color/white"
        tools:ignore="UseAppTint"
        android:background="@drawable/grey_background"
        android:scaleType="center"
        android:padding="8dp" />

    <!-- Hauptinhalt -->
    <LinearLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/btn_back"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:background="@color/black">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <!-- Titel -->
                <TextView
                    android:id="@+id/titleKalender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trainingszeitraum wÃ¤hlen:"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"/>

                <!-- Kalender -->
                <GridLayout
                    android:id="@+id/kalenderGrid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:columnCount="7"
                    android:rowCount="5"
                    android:padding="8dp"
                    android:background="@drawable/green_frame">

                    <!-- Beispiel fÃ¼r ein markiertes Datum -->
                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="8"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:background="@drawable/round_background"
                        android:layout_margin="4dp" />

                    <!-- Weitere Tage kannst du dynamisch hinzufÃ¼gen -->
                </GridLayout>

                <!-- Abstand -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="24dp" />

                <!-- Tabelle SportaktivitÃ¤ten -->
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:stretchColumns="0,1,2"
                    android:background="@color/grey_100"
                    android:padding="8dp">

                    <!-- Kopfzeile -->
                    <TableRow>
                        <TextView android:text="AktivitÃ¤ten"
                            android:textStyle="bold"
                            android:textColor="@color/white"/>
                        <TextView android:text="Start"
                            android:textStyle="bold"
                            android:textColor="@color/white"/>
                        <TextView android:text="Ende"
                            android:textStyle="bold"
                            android:textColor="@color/white"/>
                    </TableRow>
                    <TextView android:text=""/>
                    <TableRow>

                    </TableRow>
                    <!-- Push-Ups -->
                    <TableRow>
                        <TextView android:text="Push-Ups" android:textColor="@color/primary"/>
                        <TextView android:text="10 St." android:textColor="@color/primary"/>
                        <TextView android:text="30 St." android:textColor="@color/primary"/>
                    </TableRow>

                    <!-- Planks -->
                    <TableRow>
                        <TextView android:text="Planks" android:textColor="@color/primary"/>
                        <TextView android:text="20 Sek." android:textColor="@color/primary"/>
                        <TextView android:text="40 Sek." android:textColor="@color/primary"/>
                    </TableRow>

                    <!-- Weitere AktivitÃ¤ten -->
                    <TableRow>
                        <TextView android:text="Sit-Ups" android:textColor="@color/white"/>
                        <TextView android:text="0" android:textColor="@color/white"/>
                        <TextView android:text="0" android:textColor="@color/white"/>
                    </TableRow>

                    <TableRow>
                        <TextView android:text="Burpees" android:textColor="@color/white"/>
                        <TextView android:text="0" android:textColor="@color/white"/>
                        <TextView android:text="0" android:textColor="@color/white"/>
                    </TableRow>

                    <TableRow>
                        <TextView android:text="Squats" android:textColor="@color/white"/>
                        <TextView android:text="0" android:textColor="@color/white"/>
                        <TextView android:text="0" android:textColor="@color/white"/>
                    </TableRow>

                    <TableRow>
                        <TextView android:text="Lunges" android:textColor="@color/white"/>
                        <TextView android:text="0" android:textColor="@color/white"/>
                        <TextView android:text="0" android:textColor="@color/white"/>
                    </TableRow>
                </TableLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <!-- Check Button -->
    <ImageButton
        android:id="@+id/btn_confirm_selection"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_above="@id/ll_bottom_navigation"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:background="@drawable/green_button"
        android:src="@drawable/check_icon" />

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/ll_bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@color/grey_300"
        android:orientation="horizontal"
        android:weightSum="4">

        <!-- Community -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/group_white_icon" />
        </LinearLayout>

        <!-- Home -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/home_white_icon" />
        </LinearLayout>

        <!-- Add -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/add_blue_icon" />
        </LinearLayout>

        <!-- Profile -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/profile_white_icon" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
